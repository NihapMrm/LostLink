<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/bg_item">

    <!-- Warning Icon -->
    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        android:src="@drawable/ic_delete_24"
        android:background="@drawable/bg_report_type_label"
        android:padding="12dp" />

    <!-- Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Delete Report"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:fontFamily="@font/agency_fb"
        android:layout_marginBottom="12dp" />

    <!-- Confirmation Message -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Are you sure you want to delete this report?\nThis action cannot be undone."
        android:textSize="16sp"
        android:textColor="@color/semi_grey"
        android:fontFamily="@font/agency_fb_reg"
        android:gravity="center"
        android:layout_marginBottom="24dp" />

    <!-- Button Layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">

        <!-- Cancel Button -->
        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:background="@drawable/bg_input_box_border"
            android:text="Cancel"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:fontFamily="@font/agency_fb"
            android:layout_marginEnd="8dp" />

        <!-- Delete Button -->
        <Button
            android:id="@+id/btn_confirm_delete"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:background="@drawable/bg_submit_box"
            android:text="Delete"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:fontFamily="@font/agency_fb"
            android:layout_marginStart="8dp" />

    </LinearLayout>

</LinearLayout>
