<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header with back button and title -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:elevation="4dp"
            >

            <ImageButton
                android:id="@+id/backButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_chevron_left"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Back" />

            <TextView
                android:id="@+id/titleText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Support"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:fontFamily="@font/agency_fb"
                android:gravity="center"
                android:layout_marginEnd="40dp" />

        </LinearLayout>

        <!-- Support Content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center_horizontal">

            <!-- Support Image -->
            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/img_onboard3"
                android:background="@drawable/bg_profile_image"
                android:layout_marginBottom="32dp"
                android:scaleType="centerInside" />

            <!-- App Name -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LOSTLINK"
                android:textSize="36sp"
                android:textColor="@color/black"
                android:fontFamily="@font/agency_fb"
                android:layout_marginBottom="16dp" />

            <!-- Tagline -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Connecting Lost Items with Their Owners"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:fontFamily="@font/agency_fb_reg"
                android:textAlignment="center"
                android:layout_marginBottom="32dp" />

            <!-- Support Description -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Need help? We're here to assist you! Whether you have questions about using the app, reporting issues, or need technical support, feel free to reach out to us."
                android:textSize="16sp"
                android:textColor="@color/black"
                android:fontFamily="@font/agency_fb_reg"
                android:textAlignment="center"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="32dp" />

            <!-- Contact Info Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_submit_box"
                android:padding="24dp"
                android:layout_marginBottom="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contact Information"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/agency_fb"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_user"
                        android:layout_marginEnd="12dp"
                        android:tint="@color/white"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Developer: Nihap"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/agency_fb_reg" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_headphones"
                        android:tint="@color/white"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/my_mail"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/agency_fb_reg" />

                </LinearLayout>

            </LinearLayout>

            <!-- Email Button -->
            <Button
                android:id="@+id/emailButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/bg_submit_box"
                android:text="Send Email"
                android:textColor="@color/white"
                android:fontFamily="@font/agency_fb"
                android:textSize="18sp"
                android:drawablePadding="12dp"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:layout_marginBottom="16dp" />

            <!-- Additional Info -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="We typically respond within 24 hours. Please include as much detail as possible about your issue to help us assist you better."
                android:textSize="14sp"
                android:textColor="@color/black"
                android:fontFamily="@font/agency_fb_reg"
                android:textAlignment="center"
                android:lineSpacingExtra="2dp"
                android:alpha="0.7" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
